= stylesheet_link_tag 'service_providers', media: 'all', 'data-turbolinks-track' => true

h1 = ServiceProvider.model_name.human(count: ServiceProvider.count)


= link_to "Novo", new_service_provider_path
br

  = form_tag results_service_providers_path, method: :get, role: 'search' do
    = text_field_tag :keys, params[:keys], class: 'form-control'
    br
    center
     = submit_tag "Pesquisar", name: nil, class: 'btn btn-default'


div.service_providers
  - if @service_providers.any?
    - @service_providers.each do |service_provider|
      - if service_provider.validation or account_is_administrator?
        = render partial: 'service_provider',
        locals: {service_provider: service_provider}
